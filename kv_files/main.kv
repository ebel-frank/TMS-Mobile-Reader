#:import FD python_files.files_path.FileDirectories
#:import NoTransition kivy.uix.screenmanager.NoTransition

MainManager:
    transition: NoTransition()
    Screen:
        id: presplash
        name: "presplash"
        BoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: '[font={}]T M S[/font]'.format(FD.lato_bold)
                halign: "center"
                font_style: "H2"
                markup: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
            Image:
                source: FD.loading_gif1
                anim_delay: 1/60
    
    Screen:
        id: manager_screen
        name: "manager_screen"
        Manager:
            id: manager
            # App's Screens
            MainTabs:
                id: main_tabs
                name: "main_tabs"
                ToolBarTitle:
                    id: tool_bar
                    text: "[font_family={}][b]T M S[/b][/font_family]".format(FD.segoe_font)
                    bg_source: FD.toolbar_bg_img1
                    on_kv_post:
                        main_tabs.remove_widget(self)
                        main_tabs.add_widget(self)
                BottomNavWindow:
                    id: nav_window
                    add_tabs: [['recent', 'recent', 'timelapse'], ['local', 'local', 'library'], ['cloud', 'cloud', 'library']]
                    documents_list: [FD.local_files, FD.cloud_files, FD.cloud_files]
                    panel_color: FD.tab_nav_color
                    bg_color: FD.tab_bg_color
                    file_icon: FD.file_icon
                    items_bg_color: FD.tab_item_color
                    items_div_color: FD.tab_nav_color                
                   
    