<Manager>:
    id: manager
    MainTabs:
        id: main_tabs
        name: "main_tabs"
        ToolBarTitle:
            id: tool_bar
            text: "[font_family={}][b]T M S[/b][/font_family]".format(FD.segoe_font)
            bg_source: FD.toolbar_bg_img1
            on_kv_post:
                main_tabs.remove_widget(self)
                main_tabs.add_widget(self)
        
        BottomNavWindow:
            id: nav_window
            documents_list: [FD.local_files, FD.cloud_files, FD.cloud_files, FD.local_files]
            add_tabs: (('recent', 'recent', 'timelapse'), ('local', 'local', 'library'), ('cloud', 'cloud', 'library'), ('starred', 'starred', 'star'))
            panel_color: FD.tab_nav_color
            bg_color: FD.tab_bg_color
            file_icon: FD.file_icon
            items_bg_color: FD.tab_item_color
            items_div_color: FD.tab_nav_color 
        
        MDFloatingActionButton:
            icon: "magnify" if nav_window.current_tab != 1 else "filter"
            md_bg_color: "orange"
            icon_color: "white"
            pos_hint: {"center_y": 0.17, "center_x": 0.88}

    
    LogIn:
        id: login_signout
        name: "login_signout"
    
    Profile:
        name: "profile"
                   